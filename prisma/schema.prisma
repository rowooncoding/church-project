generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db" // SQLite 데이터베이스 파일 경로
}

model User {
  id       Int      @id @default(autoincrement())
  name     String?
  email    String   @unique
  password String
  phone    String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Session과의 관계
  sessions Session[] // 역참조 필드 추가
  accounts Account[] // Account와의 관계
}

model Session {
  id        String   @id @default(cuid())
  sessionToken String @unique
  expires   DateTime
  userId    Int
  user      User     @relation(fields: [userId], references: [id])
}

model Account {
  id                 String @id @default(cuid())
  userId             Int
  type               String
  provider           String
  providerAccountId  String
  refresh_token      String?
  access_token       String?
  expires_at         Int?
  user               User   @relation(fields: [userId], references: [id])
}

model VerificationToken {
  id         String   @id @default(cuid())
  identifier String
  token      String   @unique
  expires    DateTime
}